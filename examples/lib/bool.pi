#attach: cell.pi

#global: tt
#global: ff
#global: switch
#global: bool

c<<tt;->c; t,f<-c;->t.
c<<ff;->c; t,f<-c;->f.

! Boolean cell
c<<bool; get,set<-<cell; +set_tt,set_ff,value;(
  ! Set to true initially.
  <>set_tt; set_tt,set_ff,value->c.

  ! Setters
  ack<<set_tt; tt,ack>->set.
  ack<<set_ff; ff,ack>->set.

  ! Getter
  t,f<<<value; x<-<get; t,f>->x.
)